@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@model List<Models.Framework.VeXe>
@section header{
    Danh Sách ghế của tất cả lịch chạy
}

<!DOCTYPE html>
<html>
<body>
    <div class="box">

        <div class="col-lg-12">

            <div class="panel panel-default">
                <div class="panel-heading">
                    @*<p>
                            <a class="btn btn-success" href='@Url.Action("Create", "ADGiaVe")'>Thêm Mới</a>

                        </p>*@
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                                <tr>
                                    <th class="text-center">Mã hành khách</th>
                                    <th class="text-center">Mã Đơn Hàng</th>
                                    <th class="text-center">ID ghe</th>
                                    <th class="text-center">Vi tri ngoi</th>
                                    

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr id="tr-item_@item.MaDH">
                                    <td class="text-center">@item.MaHK</td>
                                    <td class="text-center">@item.MaDH</td>
                                    <td class="text-center">@item.IDGhe</td>
                                    <td class="text-center">@item.VitriNgoi</td>

                                </tr>
                                }


                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
            <!--End Advanced Tables -->
        </div>
    </div>
</body>

</html>
