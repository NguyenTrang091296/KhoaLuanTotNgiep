@model Models.Framework.GiaVe

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
       Sửa giá vé cho các tuyền đường
    }

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal" style="margin-top: 50px;">
        
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="col-xs-3 control-label">Mã Tuyến:</label>
            <div class="col-xs-5 selectContainer">
                @Html.DropDownListFor(model => model.MaTD, null, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MaTD, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-xs-3 control-label">Ngày bắt đầu:</label>
            <div class="col-xs-3 selectContainer">
                @*@Html.TextBoxFor(model => model.NGAYDI, new { htmlAttributes = new { @class = "form-control datepicker" } })*@
                @Html.TextBoxFor(model => model.NgayBD, htmlAttributes:new {
                @class = "salsa-calendar-input form-control dDate date-readonly", @id = "checkin",
               @autocomplete = "off", @name = "arrival"
           })
                @Html.ValidationMessageFor(model => model.NgayBD, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-xs-3 control-label">Giá Vé:</label>
            <div class="col-xs-3 selectContainer">
                @Html.EditorFor(model => model.Gia, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Gia, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10 btnm">
                <input type="submit" value="Lưu" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div style="margin-top: 222px;">
    @Html.ActionLink("Quay lại", "Index")
</div>
