@model Models.Framework.NhanVien
@{
    ViewBag.Title = "Details";
}

@section header{
   Sửa thông tin nhân viên
}
<head>

    <style>
        select{
            height: 30px;
            width: 164px;
        }

        
    </style>

</head>
<div class="form-horizontal" style="margin-top: 50px;">
    <div class="panel-body">
        <div class="row">
            
            <div class="col-sm-10">
                @using (Html.BeginForm())
                {
                    <form action="/ADNhanVien/Details" method="post">

                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">

                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                <input hidden name="MaHK" value="@Model.MaNV" />

                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 col-ms-12">
                                <div class="form-group">
                                    <label for="">Họ tên *</label>
                                    <div class="col-md-12">
                                        @Html.EditorFor(model => model.TenNV, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.TenNV, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 col-ms-12">
                                <div class="form-group">
                                    <label for="">Login Name*</label>
                                    <div class="col-md-12">

                                        <input disabled value="@Model.LGName" />
                                        @Html.ValidationMessageFor(model => model.LGName, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 col-ms-12">
                                <div class="form-group">
                                    <label for="">Email*</label>
                                    <div class="col-md-12">
                                        <input disabled value="@Model.Email" />
                                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })

                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 col-ms-12">
                                <div class="form-group">
                                    <label for="">Số điện thoại*</label>
                                    <div class="col-md-12">
                                        @Html.EditorFor(model => model.SDT, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.SDT, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 col-ms-12">
                                <div class="form-group">
                                    <label for="">Số CMND*</label>
                                    <div class="col-md-12">
                                        @Html.EditorFor(model => model.CMND, new { htmlAttributes = new { @class = "form-control", type = "number" } })
                                        @Html.ValidationMessageFor(model => model.CMND, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 col-ms-12">
                                <div class="form-group">
                                    <label for="">Ngày Sinh*</label>
                                    <div class="col-md-12">
                                        @Html.EditorFor(model => model.NgaySinh, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                                        @Html.ValidationMessageFor(model => model.NgaySinh, "", new { @class = "text-danger" })
                                    </div>

                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 col-ms-12">
                                <div class="form-group ">
                                    <label for="">Giới tính*</label>
                                    <div class="col-md-12">
                                        @Html.DropDownList("GioiTinh", new List<SelectListItem>
                                       {

                                            new SelectListItem {Text = "Nam" ,Value ="Nam" },
                                           new SelectListItem {Text = "Nữ" ,Value ="Nữ" },


                                       }, new {id = "GioiTinh", @class = "controldropdownlist", stype= " height: 30px; width:150px"
                                       })
                                        @Html.ValidationMessageFor(model => model.GioiTinh, "", new { @class = "text-danger" })

                                    </div>
                                </div>

                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 col-ms-12">
                                <div class="form-group">
                                    <label for="">Địa chỉ *</label>
                                    <div class="col-md-12">
                                        @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 col-ms-12">
                                <div class="form-group">
                                    <label for="">Chức vụ *</label>
                                    <div class="col-md-12">
                                        @Html.DropDownListFor(model => model.MaChucVu, null, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.MaChucVu, "", new { @class = "text-danger" })

                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 col-ms-12">
                                <div class="form-group">
                                    <label for="">Mật Khẩu*</label>
                                    <div class="col-md-12">
                                        @Html.PasswordFor(model => model.MatKhau, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
                                    </div>

                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 col-ms-12">
                                <div class="form-group">
                                    <label for="">Xác nhận mật Khẩu*</label>
                                    <div class="col-md-12">
                                        <input name="XNMatKhau" type="password" id="XNMatKhau" />

                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-8 btnm">
                                        <input type="submit" value="Lưu" class="btn btn-default" />
                                    </div>
                                </div>
                            </div>

                    </form>
                }
            </div>
        </div>
    </div>

    <div>
        @Html.ActionLink("Quay lại", "Index")
    </div>

</div>