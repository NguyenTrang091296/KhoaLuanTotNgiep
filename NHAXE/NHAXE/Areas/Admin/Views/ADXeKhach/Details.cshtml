                            @Html.ValidationMessageFor(model => model.MaLoaiXe, "", new { @class = "text-danger" })

                        </div>
                        
                        <div class="form-group">
                            @Html.LabelFor(model => model.SoCot, htmlAttributes: new { @class = "control-label col-md-4" })
                            @Html.EditorFor(model => model.SoCot, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.SoCot, "", new { @class = "text-danger" })

                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.SoHang, htmlAttributes: new { @class = "control-label col-md-4" })
                            @Html.EditorFor(model => model.SoHang, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.SoHang, "", new { @class = "text-danger" })

                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-4 col-md-10 btnm">
                                <input type="submit" value="Lưu" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <div>
        @Html.ActionLink("Quay lại", "Index")
    </div>

</div>