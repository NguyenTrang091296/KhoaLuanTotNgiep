@model Models.Framework.XeKhach
@{
    ViewBag.Title = "Details";
}
@section header{
    Xe khách
}
<head>
    <style>
        select {
            height: 30px;
            width: 276px;
        }
    </style>
</head>
<div class="form-horizontal" style="margin-top: 50px;">
    <div class="panel-body">
        <div class="row">
            
            
            <div class="col-lg-6">
                @using (Html.BeginForm("Details", "ADXeKhach", FormMethod.Post))
