                            @Html.ValidationMessageFor(model => model.BSX, "", new { @class = "text-danger" })

                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.MaLoaiXe, htmlAttributes: new { @class = "control-label col-md-4" })
