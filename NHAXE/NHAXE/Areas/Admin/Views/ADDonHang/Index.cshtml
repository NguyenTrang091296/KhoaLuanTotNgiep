@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@model List<Models.Framework.DonHang>
@section header{
    Danh sách đơn hàng của hành khách
}

<!DOCTYPE html>
<html>
<body>
    <div class="box">

        <div class="col-lg-12">

            <div class="panel panel-default">
                <div class="panel-heading">
                    @*<p>
                            <a class="btn btn-success" href='@Url.Action("Create", "ADGiaVe")'>Thêm Mới</a>

                        </p>*@
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                                <tr>
                                    <th class="text-center">Mã Đơn Hàng</th>
                                    <th class="text-center">Số lượng vé</th>
                                    <th class="text-center">Tổng Tiền</th>
                                    <th class="text-center">Mã chuyến xe</th>
                                    <th class="text-center">Hình thức</th>
                                    <th class="text-center">Trạng thái</th>
                                    <th class="text-center">Ngày đặt hàng</th>
                                    <th class="text-center">Mã hành khách</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr id="tr-item_@item.MaDH">
                                    <td class="text-center">@item.MaDH</td>
                                    <td class="text-center">@item.Soluongve</td>
                                    <td class="text-center">@item.TongTien</td>
                                    <td class="text-center">@item.MaPC</td>
                                    <td class="text-center">@((@item.HinhThuc == 0) ? "Trực tiếp" : "Oline" )</td>
                                    <td class="text-center">  @((@item.TrangThai == 0) ? "Chưa thanh toán" : (@item.TrangThai == 1) ? "Đã Thanh Toán" : "Đã hủy" )</td>
                                    <td class="text-center">@item.NgayDH.ToString()</td>
                                    <td class="text-center">@item.MaHK</td>

                                </tr>
                                }


                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
            <!--End Advanced Tables -->
        </div>
    </div>
</body>

</html>
